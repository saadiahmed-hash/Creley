<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Add_Home_Frag"
    android:paddingHorizontal="20dp"

    android:id="@+id/globalContainer"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >


            <TextView
                android:lines="2"
                android:gravity="center"
                android:id="@+id/addTxt"
                android:layout_width="250dp"
                android:autoSizeTextType="uniform"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ajouter un nouveau immobilier"
                android:fontFamily="@font/popi_bold"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:layout_marginTop="50dp">
            </TextView>
            <ImageView
                android:background="@drawable/transparent_back_btn"
                android:padding="2dp"
                android:id="@+id/homeImg"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/addTxt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/select_pic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"

                >

            </ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Daïra"
                app:cursorColor="@color/mainColor"
                app:boxStrokeColor="@color/mainColor"
                app:boxBackgroundColor="@color/reg_white"
                android:textColorHint="@color/gray"
                app:hintTextColor="@color/gray"
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/passContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:outlineAmbientShadowColor="@color/mainColor"
                app:endIconTint="@color/mainColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                >
                <AutoCompleteTextView

                    android:id="@+id/dairaList"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/popi_reg"
                    android:includeFontPadding="false"

                    >
                </AutoCompleteTextView>



            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
               android:layout_marginTop="10dp"
                android:hint="Commune"
                app:cursorColor="@color/mainColor"
                app:boxStrokeColor="@color/mainColor"
                app:boxBackgroundColor="@color/reg_white"
                android:textColorHint="@color/gray"
                app:hintTextColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/passContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:outlineAmbientShadowColor="@color/mainColor"
                app:endIconTint="@color/mainColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                >
                <AutoCompleteTextView
                    android:id="@+id/baladiaList"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/popi_reg"
                    android:includeFontPadding="false"

                    >
                </AutoCompleteTextView>



            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:hint="Type d'immobilier"
                app:cursorColor="@color/mainColor"
                app:boxStrokeColor="@color/mainColor"
                app:boxBackgroundColor="@color/reg_white"
                android:textColorHint="@color/gray"
                app:hintTextColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/passContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:outlineAmbientShadowColor="@color/mainColor"
                app:endIconTint="@color/mainColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                >
                <AutoCompleteTextView
                    android:id="@+id/estateTypeList"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/popi_reg"
                    android:includeFontPadding="false"

                    >
                </AutoCompleteTextView>



            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:hint="Type de période"
                app:cursorColor="@color/mainColor"
                app:boxStrokeColor="@color/mainColor"
                app:boxBackgroundColor="@color/reg_white"
                android:textColorHint="@color/gray"
                app:hintTextColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/passContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:outlineAmbientShadowColor="@color/mainColor"
                app:endIconTint="@color/mainColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                >
                <AutoCompleteTextView

                    android:id="@+id/periodTypeList"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/popi_reg"
                    android:includeFontPadding="false"

                    >
                </AutoCompleteTextView>



            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="15dp"
                app:cursorColor="@color/mainColor"
                app:boxStrokeColor="@color/mainColor"
                app:boxBackgroundColor="@color/reg_white"
                android:textColorHint="@color/gray"
                app:hintTextColor="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/priceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconTint="@color/gray"
                android:hint="Prix"
                app:endIconMode="custom"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="numberDecimal"
                    android:id="@+id/priceEdit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/popi_reg"
                    android:includeFontPadding="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.textfield.TextInputLayout
                    app:cursorColor="@color/mainColor"
                    app:boxStrokeColor="@color/mainColor"
                    app:boxBackgroundColor="@color/reg_white"
                    android:textColorHint="@color/gray"
                    app:hintTextColor="@color/gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/nbFloorContainer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:endIconTint="@color/gray"
                    android:hint="Numéro d'étage"
                    app:endIconMode="custom"
                    android:layout_marginEnd="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="number"
                        android:id="@+id/nbFloorEdit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/popi_reg"
                        android:includeFontPadding="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="5dp"
                    app:cursorColor="@color/mainColor"
                    app:boxStrokeColor="@color/mainColor"
                    app:boxBackgroundColor="@color/reg_white"
                    android:textColorHint="@color/gray"
                    app:hintTextColor="@color/gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/emailContainer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:endIconTint="@color/gray"
                    android:hint="Chambres"
                    app:endIconMode="custom"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="number"
                        android:id="@+id/nbRoomsEdit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/popi_reg"
                        android:includeFontPadding="false"
                        android:autoSizeTextType="uniform"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.textfield.TextInputLayout
                    app:cursorColor="@color/mainColor"
                    app:boxStrokeColor="@color/mainColor"
                    app:boxBackgroundColor="@color/reg_white"
                    android:textColorHint="@color/gray"
                    app:hintTextColor="@color/gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/surfaceContainer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:endIconTint="@color/gray"
                    android:hint="surface"
                    app:endIconMode="custom"
                    android:layout_marginEnd="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="numberDecimal"
                        android:id="@+id/surfaceEdit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/popi_reg"
                        android:includeFontPadding="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="5dp"
                    app:cursorColor="@color/mainColor"
                    app:boxStrokeColor="@color/mainColor"
                    app:boxBackgroundColor="@color/reg_white"
                    android:textColorHint="@color/gray"
                    app:hintTextColor="@color/gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/nbBathroomContainer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:endIconTint="@color/gray"
                    android:hint="Salles de bains"
                    app:endIconMode="custom"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="number"
                            android:id="@+id/nbBathroomEdit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/popi_reg"
                        android:includeFontPadding="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginBottom="120dp"
                android:layout_marginTop="80dp"
                android:id="@+id/addBtn"
                android:background="@drawable/button_back"
                android:textColor="#FFFFFF"
                android:text="Ajouter un immobilier"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/popi_med"
                android:textSize="18sp"
                android:includeFontPadding="false"
                >
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>