<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/reg_white"
    android:backgroundTint="@color/reg_white"
    >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameContainer">

</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bottom_back"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="4dp"
        android:elevation="10dp"
        android:layout_marginBottom="25dp"
        >
        <LinearLayout
            android:id="@+id/prodListBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:id="@+id/prodListImg"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/home_icon"
                app:tint="@color/black">

            </ImageView>
            <TextView
                android:id="@+id/prodListTxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="bottom"
                android:text="Accueille"
                android:fontFamily="@font/popi_med"
                android:textColor="@color/gray"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reqBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:id="@+id/reqImg"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/requast"
                app:tint="@color/black"
                android:paddingVertical="3dp"
                >

            </ImageView>
            <TextView
                android:gravity="bottom"
                android:id="@+id/reqTxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="@string/request"
                android:fontFamily="@font/popi_med"
                android:textColor="@color/gray"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/addProductBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <ImageView
                android:id="@+id/addProdImg"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/add_icon"
                android:paddingVertical="2dp"

                >

            </ImageView>
            <TextView
                android:id="@+id/addProdTxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Ajouter"
                android:fontFamily="@font/popi_med"
                android:includeFontPadding="false"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <ImageView
                android:id="@+id/profImg"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/person_icon"
                app:tint="@color/black">

            </ImageView>
            <TextView
                    android:id="@+id/profTxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Profil"
                android:fontFamily="@font/popi_med"
                android:textColor="@color/gray"
                android:gravity="bottom"
                >
            </TextView>
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>