<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFrag"
    android:backgroundTint="@color/reg_white"
    android:background="@color/reg_white"
    >
    <EditText
        android:id="@+id/searchEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/search_back"
        android:hint="Search..."
        android:paddingStart="12dp"
        android:fontFamily="@font/popi_reg"
        android:drawableEnd="@drawable/search_icon"
        android:drawableTint="#87000000"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:textColorHint="#87000000"
        android:textSize="18sp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="20dp"

        >

    </EditText>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEdit"
        android:layout_marginTop="25dp"
        android:scrollbars="none"
        android:paddingEnd="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:id="@+id/allFilter"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="20dp"
                >
                <ImageView
                    android:id="@+id/allImg"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/creley_logo"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/allTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tous"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/mainColor"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/apartmentFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                >
                <ImageView
                    android:id="@+id/apartmentImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/appartment_icon"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/apartmentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appartement"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bungalowFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="7dp"

                >
                <ImageView
                    android:id="@+id/bungalowImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/bungalow_icon"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/bungalowTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bungalow"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chaletFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                >
                <ImageView
                    android:id="@+id/chaletImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/chalet_icon"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/chaletTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chalet"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cTouriFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                >
                <ImageView
                    android:id="@+id/cTouriImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/complexe_touri"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/cTouriTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C.touristique"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/localFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                >
                <ImageView
                    android:id="@+id/localImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/local_icon"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/localTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/villaFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                >
                <ImageView
                    android:id="@+id/villaImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/villa_icon"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/villaTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Villa"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/studioFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                >
                <ImageView
                    android:id="@+id/studioImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/studio_icon"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/studioTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio"
                    android:textSize="11sp"
                    android:fontFamily="@font/popi_reg"
                    android:textColor="@color/reg_black"
                    android:includeFontPadding="false"
                    >

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>